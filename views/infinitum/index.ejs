    <nav class="cell">
        <div class="logo"><span>&nbsp;</span> <span> APAROKSHA@iiita </span></div>

        <% if (!loggedIn) { %>
        <div id="nav-login-btn" class="nav-button nav-login"><span><a href="/infinitum/login" style="color: black">Sign In</a></span></div>
        <% } else { %>
        <div id="nav-profile-btn" class="nav-button nav-login"><span><%=userName%></span></div>
        <% } %>

        <div id="nav1" class="nav-button nav-selected">
            <div class="icon icon1"></div>
            <span>HOME</span></div>
        <div id="nav8" class="nav-button">
            <div class="icon icon3"></div>
            <span>Leaderboard</span>
        </div>


        <% for (var i = 1; i <= 6; i++) { %>
            <div id="nav<%=(i + 1)%>" level="<%=i%>" class="nav-button">
                <div class="icon icon2"></div>
                <span>Level <%=i%> </span>
                <% if (!unlocked[i]) { %>
                    <img style="margin-right: 10px; float: right" src="/images/lock.png" width="20" height="20">
                <% } %>
            </div>

            <% if (!unlocked[i]) { %>
                <script>
                    $("#nav<%=(i + 1)%>").attr('make-disabled', 'true').css("opacity", '0.3');
                </script>
            <% } %>
        <% } %>

